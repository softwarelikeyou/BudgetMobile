<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="/WEB-INF/tld/sly.tld" prefix="sly"?>
<?component name="sidebar" macroURI="/sidebar.zul" inline="true"?>
<?component name="topbar" macroURI="/top-bar.zul" inline="true"?>
<zk xmlns:html="http://www.w3.org/1999/xhtml"
	 xmlns:y="http://www.zkoss.org/2007/yui">
 <borderlayout id="baseLayout"
               apply="com.budgetprepay.viewcontroller.request.Controller">
  <north border="none" 
         height="28px">
	<include src="/top-bar.zul"/>
  </north>
  <west size="12%"
        splittable="true" 
        collapsible="false" 
        title="${sly:getLabel('Labels.UI.requests')}">
	<borderlayout>
	 <center>
	  <include src="/Request/actions.zul" 
	           id="actions"/>
	 </center>
	 <south>
	  <include src="/sidebar.zul"/>
	 </south>
	</borderlayout>
  </west>
  <center>
   <borderlayout id="pageCenterLayout">
	 <north size="50%" 
	        splittable="true">
	  <include height="100%" src="/Request/list.zul"/>
	 </north>
     <center id="detailsPanel"
             flex="true">
	  <imagelabel value="${sly:getMessage('Messages.UI.select-a-request-to-view-details')}"
				  image="/MVNO/${sly:getImageURL('file', 'small')}"
				  tooltiptext="${sly:getMessage('Messages.UI.select-a-request-to-view-details')}"
				  style="margin: 5px"/>
	 </center>

   </borderlayout>	 	
  </center>	
 </borderlayout>
</zk>